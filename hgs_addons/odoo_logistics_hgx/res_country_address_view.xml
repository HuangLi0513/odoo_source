<?xml version="1.0"?>
<openerp>
    <data>
        <record id="res_country_address_form" model="ir.ui.view">
			<field name="name">地址信息</field>
			<field name="model">res.country.address</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="res country address">
					<sheet>
						<group>
							<field name="province" class="oe_inline" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}" readonly="1"/>
		                    <field name="city" class="oe_inline" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}" readonly="1"/>
		                    <field name="district" class="oe_inline" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}" readonly="1"/>
		                    <field name="detail_address"/>
		                    <field name="formatted_address" readonly="1"/>
		                    <field name="amap_location" class="oe_inline" readonly="1"/>
		                    <field name="amap_location_level" class="oe_inline" readonly="1"/>
		                    <field name="key_words"/>
						</group>
					</sheet>
				</form>
			</field>
	 	</record>
	 	
		<record id="res_country_address_tree" model="ir.ui.view">
			<field name="name">地址信息</field>
			<field name="model">res.country.address</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="res country address" toolbar="1">
                    <field name="province" />
					<field name="city"/>
                    <field name="district" />
					<field name="detail_address"/>
					<field name="formatted_address"/>
					<field name="amap_location"/>
				</tree>
			</field>
	 	</record>
	 	
	 	<record id="res_country_address_filter" model="ir.ui.view">
        	<field name="name">res country address filter</field>
            <field name="model">res.country.address</field>
            <field name="arch" type="xml">
            	<search string="Search Res Country Address">
            		<field name="detail_address" string="详细地址" filter_domain="[('detail_address','ilike',self)]"/>
                    <separator/>
                    <filter name="already_got_location" string="已定位" domain="[('amap_location','!=', False)]"/>
					<separator/>
					<filter name="wait_get_location" string="未定位" domain="[('amap_location','=', False)]"/>
					<separator/>
                    <group expand="0" string="分组...">
						<filter string="省" name="province" icon="terp_personal" context="{'group_by':'province'}"/>
						<separator/>
						<filter string="市" name="city" icon="terp_personal" context="{'group_by':'city'}"/>
						<separator/>
						<filter string="区 " name="district" icon="terp_personal" context="{'group_by':'district'}"/>
						<separator/>
                    </group>
                </search>
            </field>
        </record>
	 	
	 	<record id="action_res_country_address" model="ir.actions.act_window">
			<field name="name">地址列表</field>
			<field name="res_model">res.country.address</field>
			<field name="search_view_id" ref="res_country_address_filter"/>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="res_country_address_tree" />
		</record>
		
		<menuitem action="action_res_country_address" id="menu_res_country_address" name="地址列表" parent="odoo_logistics_hgx.logistics_settings" sequence="10" />
		
		<record id="action_get_amap_location_4_address" model="ir.actions.server">
			<field name="name">获取高德地址坐标</field>
			<field name="type">ir.actions.server</field>
			<field name="model_id" ref="model_res_country_address"/>
			<field name="groups_id" eval="[(4,ref('base.group_erp_manager'))]"/>
    		<field name="state">code</field>
			<field name="code">self.get_amap_location_4_address(cr, uid, context.get('active_ids'), context=context)</field>
       	</record>
	
		<record id="value_action_get_amap_location_4_address" model="ir.values">
			<field name="name">获取高德地址坐标</field>
			<field name="key">action</field>
			<field name="model_id" ref="model_res_country_address"></field>
			<field name="model">res.country.address</field>
			<field name="key2">client_action_multi</field>
			<field name="value" eval="'ir.actions.server,' + str(ref('action_get_amap_location_4_address'))"/>
		</record>
		
		<record id="action_get_delivery_terminal_4_address" model="ir.actions.server">
			<field name="name">分配最优配送点</field>
			<field name="type">ir.actions.server</field>
			<field name="model_id" ref="model_res_country_address"/>
			<field name="groups_id" eval="[(4,ref('base.group_erp_manager'))]"/>
    		<field name="state">code</field>
			<field name="code">self.get_delivery_terminal_4_address(cr, uid, context.get('active_ids'), context=context)</field>
       	</record>
	
		<record id="value_action_get_delivery_terminal_4_address" model="ir.values">
			<field name="name">分配最优配送点</field>
			<field name="key">action</field>
			<field name="model_id" ref="model_res_country_address"></field>
			<field name="model">res.country.address</field>
			<field name="key2">client_action_multi</field>
			<field name="value" eval="'ir.actions.server,' + str(ref('action_get_delivery_terminal_4_address'))"/>
		</record>
        
    </data>
</openerp>
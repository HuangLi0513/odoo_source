<?xml version="1.0"?>
<openerp>
    <data>
        <record id="view_init_address_records_wizard" model="ir.ui.view">
            <field name="name">init address records</field>
            <field name="model">hgs.init_address_records</field>
            <field name="arch" type="xml">
                <form string="init address records" version="7.0">
                	<group>
                		<field name="operation_note" readonly="1" style="color:red"/>
                	</group>
                    <group>
                    	<group>
		                    <field name="province_id" class="oe_inline" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
		                    <field name="city_id" class="oe_inline" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
		                    <field name="district_id" class="oe_inline" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
		                </group>
		           </group>
		           <group>
		                <group>
                    		<field name="order_created_start" />
                    	</group>
                    	<group>
                    		<field name="order_created_end" />
                    	</group>
                    </group>
                    <footer>
                        <button name="init_address_records_by_sale_order" string="创建基础数据" type="object"  class="oe_highlight"  />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_init_address_records">
            <field name="name">从订单数据中初始化地址数据</field>
            <field name="res_model">hgs.init_address_records</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
		
        <menuitem action="action_init_address_records" id="init_address_records" name="初始化地址数据" parent="odoo_logistics_hgx.logistics_settings" sequence="50" />
    </data>
</openerp>